<?xml version="1.0" encoding="utf-8"?>
<!-- 忘记密码页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forget_title"
        android:text="@string/your_email"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:layout_width="300dp"
        android:id="@+id/forget_desc"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="@string/forget_desc"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        app:met_underlineColor="#666"
        app:met_textColorHint="#666"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="@string/user_email"
        android:id="@+id/edit_user_name"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/user_email"/>

    <Button
        android:id="@+id/forget_send"
        style="@style/BlueButton"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/forget_to_find"
        android:textSize="15sp" />


    <TextView
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/forget_login"
        android:layout_height="wrap_content"
        android:text="@string/back_to_login"
        android:layout_marginTop="30dp"
        android:textSize="15sp" />
</LinearLayout>